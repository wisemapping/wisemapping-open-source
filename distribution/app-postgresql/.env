# ========================================
# REQUIRED: Storage Path
# ========================================
# Absolute path where PostgreSQL data will be stored
# Replace this with your actual storage path
WISEMAPPING_DATA_DIR=./data

# ========================================
# PostgreSQL Configuration
# ========================================
POSTGRES_DB=wisemapping
POSTGRES_USER=wisemapping
POSTGRES_PASSWORD=password

# ========================================
# Application Ports
# ========================================
WISEMAPPING_PORT=80
POSTGRES_PORT=5432

# ========================================
# Java Options
# ========================================
JAVA_OPTS=-Xmx2048m -Xms1024m
